# Include important documentation
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml

# Include documentation directory
recursive-include docs *.md

# Include examples directory
recursive-include examples *.py

# Include package marker files
include src/carver_feeds/py.typed

# Include .env.example as template for users
include .env.example

# Exclude actual .env file
exclude .env
recursive-exclude .claude *
recursive-exclude skill *
recursive-exclude tests *
recursive-exclude .git *
recursive-exclude .venv *
exclude .gitignore
exclude .DS_Store
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.swp
global-exclude .DS_Store
